# Fastfile

require_relative 'modules/env'
require_relative 'modules/utils'
require_relative 'modules/xcode_setup'

# Defines iOS as default platform
default_platform(:ios)

platform :ios do

  # Prepare environment
  before_all do
    xcodes(version: XcodeSetup.xcode_version)
  end

  # Tests
  lane :test do
    puts "Testing kicked off! üß™"

    scan(
      devices: Env.test_devices,
      scheme: Env.test_scheme,
      clean: true,
      output_types: "html"
    )
  end

  # Builds
  lane :build do
    build_scheme(scheme: Env.build_scheme)
  end

  # Deploys
  lane :deploy do
    puts "Under construction... üöú"

    # Deploy to App Center
    # ...
    
    # Deploy to TestFlight
    # upload_to_testflight
  end

  #####
  # Private lanes
  #####

  # Builds
  private_lane :build_scheme do |options|
    scheme = options[:scheme]
    output_name = "HelloWorld_" + scheme

    puts "Building " + scheme + " now... üçø"

    gym(
      scheme: scheme,
      clean: true,
      output_name: output_name
    )
  end
end

