# Fastfile

require_relative 'modules/xcode_setup'
require_relative 'modules/utils'

default_platform(:ios)

platform :ios do

  # Prepare environment
  before_all do
    xcodes(version: XcodeSetup.xcode_version)
  end

  # Tests
  lane :test do
    puts "Testing kicked off! üß™"

    scan(
      devices: [ENV["SCAN_DEVICE"]],
      scheme: ENV["SCAN_SCHEME"]
    )
  end

  # Builds
  lane :build do
    puts "Building the App now... üçø"

    gym(
      scheme: ENV["BUILD_SCHEME"],
      clean: true,
      output_name: "HelloWorldApp"
    )
  end

  # Deploys
  lane :deploy do
    puts "Under construction... üöú"

    # Deploy to App Center
    # ...
    
    # Deploy to TestFlight
    # upload_to_testflight
  end
end

