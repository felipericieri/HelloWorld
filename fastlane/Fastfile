# Fastfile

require_relative 'XcodeSetup'
require_relative 'Utils'

default_platform(:ios)

platform :ios do

  before_all do
    XcodeSetup.set_xcode_version
  end

  # Tests
  lane :test do
    puts "Testing kicked off! 🧪"

    scan(
      devices: [ENV["SCAN_DEVICE"]],
      scheme: ENV["SCAN_SCHEME"]
    )
  end

  # Builds
  lane :build do
    puts "Building the App now... 🍿"

    gym(
      scheme: ENV["BUILD_SCHEME"]
    )
  end

  # Deploys
  lane :deploy do
    puts "Under construction... 🚜"

    # Deploy to App Center
    # ...
    
    # Deploy to TestFlight
    # upload_to_testflight
  end
end

